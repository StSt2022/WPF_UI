<Window x:Class="Regard3D_Tablet.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Regard 3D - Image3D" Height="750" Width="1200"
        Background="#F3F3F3"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="StandardButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#AAAAAA"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,12"/>
            <Setter Property="MinHeight" Value="45"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#F5F5F5"/>
                                <Setter TargetName="bd" Property="BorderBrush" Value="#888888"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#E0E0E0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DeleteButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#D32F2F"/>
            <Setter Property="BorderBrush" Value="#EF5350"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,12"/>
            <Setter Property="MinHeight" Value="45"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#FFEBEE"/>
                                <Setter TargetName="bd" Property="BorderBrush" Value="#D32F2F"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#FFCDD2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#F5F5F5"/>
                                <Setter TargetName="bd" Property="BorderBrush" Value="#AAAAAA"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#E0E0E0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="GroupBox">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Padding" Value="0,5,0,0"/>
        </Style>

        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Foreground" Value="#212121"/>
        </Style>

        <Style TargetType="RadioButton">
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0" Background="White" Padding="5" FontSize="14">
            <MenuItem Header="File"/>
            <MenuItem Header="Options"/>
            <MenuItem Header="View"/>
            <MenuItem Header="Help"/>
        </Menu>

        <Grid Grid.Row="1" Margin="10,0,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Margin="0,0,10,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Background="Transparent" Margin="0,5,0,10">
                    <Button Style="{StaticResource IconButtonStyle}">
                        <TextBlock Text="📄" FontSize="20"/>
                    </Button>
                    <Button Style="{StaticResource IconButtonStyle}">
                        <TextBlock Text="📂" FontSize="20"/>
                    </Button>
                </StackPanel>

                <Border Grid.Row="1" Background="White" BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="4" Padding="5">
                    <TreeView BorderThickness="0" FontSize="14">
                        <TreeViewItem Header="Project: Image3D" IsExpanded="True">
                            <TreeViewItem Header="Picture set Window" IsExpanded="True" Margin="0,5,0,0">
                                <TreeViewItem Header="Matches 0" IsExpanded="True" Margin="0,5,0,0">
                                    <TreeViewItem Header="Triangulation 0" Margin="0,5,0,0"/>
                                </TreeViewItem>
                            </TreeViewItem>
                        </TreeViewItem>
                    </TreeView>
                </Border>

                <StackPanel Grid.Row="2" Margin="0,10,0,0">
                    <Button Content="Triangulation information" Style="{StaticResource StandardButtonStyle}"/>
                    <Button Content="Create dense pointcloud" Style="{StaticResource StandardButtonStyle}" Click="CreateDenseCloud_Click"/>
                    <Button Content="Show triangulated points" Style="{StaticResource StandardButtonStyle}"/>
                    <Button Content="Export to external MVS" Style="{StaticResource StandardButtonStyle}"/>
                    <Button Content="Delete" Style="{StaticResource DeleteButtonStyle}" Margin="0"/>
                </StackPanel>
            </Grid>

            <Border Grid.Column="1" Background="White" BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="4" Margin="0,5,0,0">
                <Grid>
                    <TextBlock Text="↕ To zoom in/out" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center" 
                               FontSize="18" 
                               Foreground="#757575"/>
                </Grid>
            </Border>

            <Grid Grid.Column="2" Margin="10,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="White" BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="4" Margin="0,5,0,0" Padding="15">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <TextBlock Text="3D view controls" Style="{StaticResource SectionHeader}"/>
                            <CheckBox Content="Show trackball"/>
                            <Separator Margin="0,10"/>

                            <TextBlock Text="Point size" Style="{StaticResource SectionHeader}"/>
                            <Slider Minimum="1" Maximum="10" Value="3" Margin="0,0,0,15" IsSnapToTickEnabled="True"/>

                            <CheckBox Content="Show texture"/>
                            <CheckBox Content="Enable lighting"/>
                            <Separator Margin="0,10"/>

                            <TextBlock Text="Polygon mode" Style="{StaticResource SectionHeader}"/>
                            <RadioButton Content="Fill" IsChecked="True" GroupName="PolyMode"/>
                            <RadioButton Content="Line" GroupName="PolyMode"/>
                            <RadioButton Content="Point" GroupName="PolyMode"/>
                            <Separator Margin="0,10"/>

                            <TextBlock Text="Shading model" Style="{StaticResource SectionHeader}"/>
                            <RadioButton Content="Smooth" IsChecked="True" GroupName="Shading"/>
                            <RadioButton Content="Flat" GroupName="Shading"/>
                        </StackPanel>
                    </ScrollViewer>
                </Border>

                <Button Grid.Row="1" Content="Reset orientation" Style="{StaticResource DeleteButtonStyle}" Margin="0,10,0,0"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
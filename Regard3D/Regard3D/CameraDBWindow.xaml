<Window x:Class="Regard3D.CameraDBWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Regard3D"
        mc:Ignorable="d"
        Title="User-defined camera DB" Height="450" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="WhiteSmoke">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ListView Grid.Row="0" BorderThickness="1" BorderBrush="#ABADB3" Background="White">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Camera maker" Width="184"/>
                    <GridViewColumn Header="Camera model" Width="184"/>
                    <GridViewColumn Header="Sensor width" Width="184"/>
                </GridView>
            </ListView.View>
        </ListView>

        <Grid Grid.Row="1" Margin="0,15,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Button Content="Delete" Style="{StaticResource ActionButtonStyle}"/>
                <Button Content="Delete all entries" Style="{StaticResource ActionButtonStyle}" Margin="10,0,0,0"/>
            </StackPanel>

            <Button Content="OK" Style="{StaticResource ActionButtonStyle}" HorizontalAlignment="Right" Width="90" IsCancel="True"/>
        </Grid>
    </Grid>
</Window>
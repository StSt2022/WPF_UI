<Window x:Class="Regard3D_Mobile.ImageInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Regard3D_Mobile"
        mc:Ignorable="d"
        Title="Image Info" Height="300" Width="350"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="WhiteSmoke"
        FontSize="14">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Padding="10" BorderBrush="#DDDDDD" BorderThickness="0,0,0,1">
            <Grid>
                <TextBlock x:Name="TitleTextBlock" Text="Info for..." FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="Image file:" FontWeight="Bold" Margin="0,0,10,8"/>
            <TextBlock x:Name="ImageFileTextBlock" Grid.Row="0" Grid.Column="1" Text="..."/>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="Image size:" FontWeight="Bold" Margin="0,0,10,8"/>
            <TextBlock x:Name="ImageSizeTextBlock" Grid.Row="1" Grid.Column="1" Text="..."/>

            <TextBlock Grid.Row="2" Grid.Column="0" Text="Camera make:" FontWeight="Bold" Margin="0,0,10,8"/>
            <TextBlock x:Name="CameraMakeTextBlock" Grid.Row="2" Grid.Column="1" Text="..."/>

            <TextBlock Grid.Row="3" Grid.Column="0" Text="Camera model:" FontWeight="Bold" Margin="0,0,10,8"/>
            <TextBlock x:Name="CameraModelTextBlock" Grid.Row="3" Grid.Column="1" Text="..."/>

            <TextBlock Grid.Row="4" Grid.Column="0" Text="Focal length:" FontWeight="Bold" Margin="0,0,10,8"/>
            <TextBlock x:Name="FocalLengthTextBlock" Grid.Row="4" Grid.Column="1" Text="..."/>

            <TextBlock Grid.Row="5" Grid.Column="0" Text="Sensor width:" FontWeight="Bold" Margin="0,0,10,8"/>
            <TextBlock x:Name="SensorWidthTextBlock" Grid.Row="5" Grid.Column="1" Text="..."/>

            <TextBlock Grid.Row="6" Grid.Column="0" Text="GPS Info:" FontWeight="Bold" Margin="0,0,10,8"/>
            <TextBlock x:Name="GpsInfoTextBlock" Grid.Row="6" Grid.Column="1" Text="..."/>
        </Grid>
    </Grid>
</Window>